{
  "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "lib": ["es2020"],
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "target": "es2020",
      "pretty": true,
      "noImplicitAny": true,
      "strict": true,
      "esModuleInterop": true,
      // "noUnusedLocals": true,
      "suppressImplicitAnyIndexErrors": true,
      "noErrorTruncation": true,
      "skipLibCheck": true,
      "importHelpers": true
  },
  "exclude": ["node_modules"]
}
